<!-- <div class="lg:relative">-->
<div class="pt-16 pb-20 text-center space-y-8 lg:py-18 lg:text-left lg:flex lg:flex-row lg:space-y-0">
  <div class="lg:w-1/2 lg:pr-8">
    <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl lg:text-5xl xl:text-6xl">
      <span class="block xl:inline">Welcome to</span>
      <span class="block text-orange xl:inline">Global Creative Studio Days</span>
    </h1>
    <div class="mt-3 max-w-md mx-auto text-lg text-gray-500 sm:text-xl md:mt-5 md:max-w-3xl"><%= @page.body %></div>
    <div class="mt-10 sm:flex space-x-3 sm:justify-center lg:justify-start">
      <% if ! @future_events.empty? %>
      <div class="rounded-md shadow bg-orange">
        <%= link_to "Coming Events", future_events_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white hover:bg-lighten md:py-4 md:text-lg md:px-10"%>
      </div>
      <% end %>
      <div class="mt-3 rounded-md shadow sm:mt-0">
        <a href="#" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-orange bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10"> Past Events </a>
      </div>
    </div>
  </div>
  <div class="relative w-full h-64 sm:h-72 md:h-96 lg:w-1/2 lg:h-auto">
    <%= image_tag @page.featured_image, class: 'w-full h-full object-cover', alt: @page.title if @page.featured_image.representable? %>
  </div>
</div>
<%= render partial: "events/event_summary", locals: {event: @future_event} if @future_event %>
