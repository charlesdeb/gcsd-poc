<%= turbo_frame_tag 'session_modal' do %>
  <%= tag.div data: { controller: "turbo-modal" } do %>
    <!-- translucent overlay-->
    <div class="fixed inset-0 bg-gray-900 bg-opacity-90 transition-opacity z-[5]"
				x-transition:enter="ease-out duration-300" x-transition:enter-start="opacity-0"
				x-transition:enter-end="opacity-100" x-transition:leave="ease-in duration-200"
				x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0" x-cloak x-trap.noscroll="true">
    </div>
    <!-- modal -->
    <div class="fixed inset-0 top-9 z-[5]">
      <div class="flex min-h-full justify-center p-0 items-center">
        <div 	x-cloak x-transition:enter="ease-out duration-300"
						x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
						x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
						x-transition:leave="ease-in duration-200"
						x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
						x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
						class="relative transform overflow-hidden rounded-lg bg-white pl-4 sm:pl-6 pb-4 sm:pb-6 text-left shadow-xl transition-all max-w-sm  w-full mx-4 sm:my-8 sm:max-w-lg md:max-w-xl lg:max-w-3xl">
          <!-- close button -->
          <%= button_tag data: { action: "turbo-modal#hideModal" }, type: "button", class: "absolute right-2 top-2 rounded-md bg-white text-gray-400  hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2", tabindex: 3 do %>
            <span	class="sr-only"><%= t('.close_pop_up') %></span>
            <!-- Heroicon name: outline/x-mark -->
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          <% end %>
          <!-- modal content -->
          <article class="flex-col space-y-4 session">
            <header class="bg-orange-500 shadow-sm text-white -mx-4 sm:-mx-6 px-4 sm:px-6 py-4">
              <h2 class="text-xl font-bold">
                <%= @session.title %>
              </h2>
              <h3 class="">
                <%= timetable_session_presenters(@session) %>
              </h3>
            </header>
            <div class="flex gap-x-6 max-h-[65vh] min-h-[8rem] overflow-y-auto pr-4 sm:pr-6">
              <div class="w-2/3 flex-col space-y-4">
                <%= @session.description %>
                <div class="text-orange-700">
                  <%= timetable_session_presenter_bio(@session) %>
                </div>
              </div>
              <div class="w-1/3 flex-col space-y-4">
                <%= timetable_session_image(@session, :modal)%>
                <div class="">
                  <h3 class="font-bold"><%= t('.session_times')%></h3>
                  <%= timetable_session_time_slots @session%>
                </div>
                <% if @session.limit.present? %>
                  <h3 class="font-bold capitalize"><%= t('.participant_limit')%></h3>
                  <%= t('.limited_to', limit: @session.limit) %>
                <% end %>
                <% if @session.requirements.present? %>
                  <h3 class="font-bold capitalize"><%= t('.requirements')%></h3>
                  <%= @session.requirements %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="clear-right "></div>
      </article>
    </div>
  <% end %>
<% end %>
