<%# Timetable component for an event %>
<%# event:: expected to be an Event %>
<%= javascript_import_module_tag "lib/timetable" %>
<section id="event-timetable">
  <div class="flex items-center space-x-8">
    <h2 class="text-2xl font-bold capitalize leading-8 tracking-tight text-orange sm:text-3xl"><%= t('.timetable') %></h2>
    <%= timezone_select %>
  </div>
  <div class="flex space-x-4 mt-8">
    <div id="timetable-time-slots" class="md:w-1/3">
      <%= render partial: 'timetable_time_slots', locals: {event: event} %>
    </div>
    <div class="md:w-2/3 border border-orange-400 relative timetable-details">
      <%= render partial: 'timetable_details', locals: {event: event} %>
    </div>
  </div>
</section>
