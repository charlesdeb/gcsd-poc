<%# Timetable component for an event %>
<%# event:: expected to be an Event %>
<%# The next line doesn't work. The file is imported run and parsed AFTER the 
    Alpine stuff has run - and it needs access to the code in this file.
    For now, this file has to be imported in application.html.erb %>
<%#= javascript_import_module_tag "lib/timetable" %>
<section id="event-timetable" class="space-y-2" x-data="timetable">
  <div class="flex items-center space-x-2">
    <h2 class="text-2xl font-bold leading-8 tracking-tight text-orange sm:text-3xl"><%= t('.timetable') %></h2>
  </div>
  <div class="flex space-x-2 lg:space-x-4">
    <div id="timetable-time-slots" class="w-full md:w-1/2">
      <%= render partial: 'timetable_time_slots', locals: {event: event} %>
    </div>
    <div class="hidden md:block md:w-1/2 border border-orange-400 relative timetable-summaries">
      <%= render partial: 'timetable_summaries', locals: {event: event} %>
    </div>
  </div>
</section>
