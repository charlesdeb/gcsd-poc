<%# Timetable details component for an event %>
<%# event:: expected to be an Event %>
<div class="absolute top-0 bottom-0 left-0 right-0 flex flex-col">
  <div class="overflow-y-auto">
    <div class="time-slot-sessions">
      <h3 class="bg-orange-500 p-5 text-white font-bold text-xl">Click on a time slot on the left to see what sessions are running in each time slot
      </h3>
    </div>
    <% timeslots = event.time_slots.order(:starting_at).each do |time_slot| %>
      <%= render partial: 'time_slots/timetable_time_slot_sessions', locals: {time_slot: time_slot} %>
    <% end %>
  </div>
</div>
