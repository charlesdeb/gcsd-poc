<article id="<%= dom_id event %>">
  <div class="overflow-hidden bg-white">
    <div class="relative mx-auto max-w-7xl py-16 px-4 sm:px-6 lg:px-8 space-y-8">
      <div class="overview">
        <!-- <div class="mx-auto max-w-prose text-base lg:grid lg:max-w-none lg:grid-cols-2 lg:gap-8"> -->
        <div class="mx-auto max-w-prose text-base lg:flex lg:max-w-none lg:justify-between lg:gap-8">
          <header>
            <h2 class="text-lg font-semibold text-orange-800"><time id="starting-at" datetime="<%= l(event.starting_at) %>" x-data x-text="$store.timeZoneSelect.formatDateTime('<%= event.starting_at.to_fs(:iso8601)%>')"></time></h2>
            <h3 class="mt-2 text-3xl font-bold leading-8 tracking-tight text-orange sm:text-4xl"><%= event.title %></h3>
          </header>
          <section class="mt-5 lg:mt-3">
            <%#= TODO: add real links to these buttons  %>
            <%= link_to t('.donate'), '#', class: "shadow bg-orange-300 px-8 py-3 border border-transparent text-base font-medium rounded-md text-white hover:bg-orange-200"%>
            <%= link_to t('.register_now'), '#', class: "shadow bg-orange px-8 py-3 border border-transparent text-base font-medium rounded-md text-white hover:bg-orange-200"%>
          </section>
        </div>
        <div class="mt-8 lg:grid lg:grid-cols-2 lg:gap-8">
          <div class="relative lg:col-start-2 lg:row-start-1">
            <svg class="absolute top-0 right-0 -mt-20 -mr-20 hidden lg:xblock" width="404" height="384" fill="none" viewBox="0 0 404 384" aria-hidden="true">
              <defs>
                <pattern id="de316486-4a29-4312-bdfc-fbce2132a2c1" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
                  <rect x="0" y="0" width="4" height="4" class="text-gray-200" fill="currentColor" />
                </pattern>
              </defs>
              <rect width="404" height="384" fill="url(#de316486-4a29-4312-bdfc-fbce2132a2c1)" />
            </svg>
            <div class="relative mx-auto max-w-prose text-base lg:max-w-none">
              <figure>
                <div class="aspect-w-12 aspect-h-7 lg:aspect-none">
                  <%= image_tag event.featured_image, class: 'rounded-lg object-cover object-center shadow-lg', width: '1184', height: '1376', alt: event.title if event.featured_image.representable? %>
                </div>
                <figcaption class="mt-3 flex text-sm text-gray-500">
                  <!-- Heroicon name: mini/camera -->
                  <svg class="h-5 w-5 flex-none text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M1 8a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 018.07 3h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0016.07 6H17a2 2 0 012 2v7a2 2 0 01-2 2H3a2 2 0 01-2-2V8zm13.5 3a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zM10 14a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                  </svg>
                  <span class="ml-2">Image by x y</span>
                </figcaption>
              </figure>
            </div>
          </div>
          <div class="mt-8 lg:mt-0">
            <div class="prose prose-indigo mx-auto text-gray-500 lg:col-start-1 lg:row-start-1 lg:max-w-none">
              <%= event.description %>
            </div>
          </div>
        </div>
      </div>
      <%= render partial: 'sessions_summary', locals: {event: event} %>
    </div>
  </div>
  <% if action_name != "show" %>
    <section>
      <%= link_to "Show this event", event_path(id: event), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to 'Edit this event', edit_admin_event_path(id: event), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"   %>
      <% end %>
    </section>
    <hr class="mt-6">
  <% end %>
</article>
