<div class="mx-auto w-full flex">
  <div class="mx-auto">
    <%# this notice stuff is probably irrelevant, since it is in the layout %>
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render partial: 'full_event', locals: {event: @event} %>
    <% if current_user && current_user.admin? %>
      <%= link_to 'Edit this event', edit_admin_event_path(id: @event), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Destroy this event', event_path(id: @event), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
      <%= link_to 'Back to events', admin_events_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>
  </div>
</div>
