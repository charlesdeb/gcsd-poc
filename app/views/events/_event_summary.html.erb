<div class="relative bg-gray-800">
  <div class="h-56 bg-red-700 bg-blend-normal sm:h-72 md:absolute md:left-0 md:h-full md:w-1/2">
    <%= image_tag event.featured_image, class: 'w-full h-full object-cover', alt: event.title if event.featured_image.representable? %>
  </div>
  <div class="relative max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
    <div class="md:ml-auto md:w-1/2 md:pl-10">
      <h2 class="text-base font-semibold uppercase tracking-wider text-gray-300"><%= l event.starting_at, format: :long %></h2>
      <%= link_to event.title, event, class: "block mt-2 text-white text-3xl font-extrabold tracking-tight sm:text-4xl" %>
      <div class="mt-3 text-lg text-gray-300 line-clamp-4"><%= event.description %></div>
      <div class="mt-8">
        <div class="inline-flex rounded-md shadow space-x-4">
          <%= link_to t('more'), event, class: "inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-orange bg-white hover:bg-beige" %>
          <a href="#" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-white bg-orange hover:mix-blend-screen">
            Register Now
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
