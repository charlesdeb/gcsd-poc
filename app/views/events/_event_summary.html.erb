<%# Event summary component %>
<%# Just shows the bare minimum for an event. Used on the home page %>
<%# event:: expected to be an Event %>
<section class="relative bg-skyblue-950">
  <div class="h-56 bg-red-700 bg-blend-normal sm:h-72 md:absolute md:left-0 md:h-full md:w-1/2">
    <%= image_tag event.featured_image.variant(format: :webp, resize_to_fit: [650, 650]), class: 'w-full h-full object-cover', alt: event.title if event.featured_image.representable? %>
  </div>
  <div class="relative text-white max-w-7xl mx-auto px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
    <div class="md:ml-auto md:w-1/2 md:pl-10">
      <header>
        <h2 class="text-base font-semibold uppercase tracking-wider text-skyblue-300"><%= alpine_time time: event.starting_at %></h2>
        <%= link_to event.title, event, class: "block mt-2 text-3xl font-extrabold tracking-tight sm:text-4xl" %>
      </header>
      <div class="mt-3 text-lg line-clamp-4"><%= event.description %></div>
      <div class="mt-8">
        <div class="inline-flex rounded-md shadow space-x-4">
          <%= link_to t('.more'), event, class: "inline-flex items-center justify-center px-5 py-3 border border-transparent text-base capitalize font-medium rounded-md text-orange bg-white hover:bg-orange-100" if event.published? %>
          <%= register_link(event, class: "inline-flex space-x-1 items-center shadow bg-orange px-8 py-3 border border-transparent text-base capitalize font-medium rounded-md text-white hover:bg-orange-400") %>
        </a>
      </div>
    </div>
  </div>
</div>
</section>
