<%# All session thumbnails for a given time_slot within an event's timetable %>
<%# time_slot:: expected to be a TimeSlot %>
<div class="origin-left" data-time_slot=time_slot_<%= time_slot.id %> 
 x-show="state.selectedTimeSlot == 'time_slot_<%= time_slot.id %>'" 
 x-transition:enter="transition ease-out duration-300 transform"
 x-transition:enter-start="opacity-0 scale-75"
 x-transition:enter-end="opacity-100 scale-100"
 x-cloak>
  <div class="p-4 space-y-4" data-sessions>
    <% time_slot.sessions.order(title: :asc).each do |session|%>
      <%= render partial: 'sessions/session_thumbnail', locals: {session: session}  %>
    <% end %>
  </div>
</div>
