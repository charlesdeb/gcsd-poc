<% if show_gtm?(Rails.env, current_user) %>
  <!-- Google Tag Manager -->
  <script>
    // based on https://gorails.com/forum/how-do-i-install-google-tag-manager-in-a-rails-5-app
    // but it may need work to get more events with turbo loading
    document.addEventListener('turbo:load', function(event) {
      console.log('turbo loaded');
      // console.log({event})
      // console.log({detail: event.detail})
      // console.log({detail: event.detail.url})
      var url = event.detail.url;
      dataLayer.push({
        'event':'pageView',
        'virtualUrl': url
        });
      });

      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','<%= ENV.fetch('GTM_ID',nil) %>');
  </script>
  <!-- End Google Tag Manager -->
<% end %>
